<Window x:Class="Smakopedia.RecipeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smakopedia"
        mc:Ignorable="d"
        Title="Select Recipe" Height="600" Width="1000"
        Background="#5D4037">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left column - Recipe list -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Recipes"
                     Foreground="White"
                     FontSize="24"
                     FontWeight="Bold"
                     FontFamily="Fonts/#Dosis"
                     Margin="0,0,0,20"/>
            
            <ListBox x:Name="RecipesListBox"
                     SelectionChanged="RecipesListBox_SelectionChanged"
                     Background="#795548"
                     BorderThickness="0"
                     FontFamily="Fonts/#Dosis">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10">
                            <TextBlock Text="{Binding Title}"
                                     Foreground="White"
                                     FontSize="16"
                                     FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}"
                                     Foreground="White"
                                     TextWrapping="Wrap"
                                     Margin="0,5,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Right column - Recipe details -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock x:Name="RecipeTitleTextBlock"
                         Foreground="White"
                         FontSize="24"
                         FontWeight="Bold"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,20"/>

                <Image x:Name="RecipeImage"
                       Height="200"
                       Stretch="UniformToFill"
                       Margin="0,0,0,20"/>

                <TextBlock Text="Description"
                         Foreground="White"
                         FontSize="18"
                         FontWeight="Bold"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,10"/>
                <TextBlock x:Name="RecipeDescriptionTextBlock"
                         Foreground="White"
                         FontSize="16"
                         TextWrapping="Wrap"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Ingredients"
                         Foreground="White"
                         FontSize="18"
                         FontWeight="Bold"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,10"/>
                <ListBox x:Name="IngredientsListBox"
                         Height="150"
                         Background="#795548"
                         BorderThickness="0"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Instructions"
                         Foreground="White"
                         FontSize="18"
                         FontWeight="Bold"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,10"/>
                <ListBox x:Name="InstructionsListBox"
                         Height="200"
                         Background="#795548"
                         BorderThickness="0"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Additional Information"
                         Foreground="White"
                         FontSize="18"
                         FontWeight="Bold"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,10"/>
                <TextBlock x:Name="RecipeDetailsTextBlock"
                         Foreground="White"
                         FontSize="14"
                         TextWrapping="Wrap"
                         FontFamily="Fonts/#Dosis"
                         Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Center" 
                          Margin="0,20,0,0">
                    <Button Content="Start Cooking"
                            Click="StartCookingButton_Click"
                            Foreground="Black"
                            FontSize="16"
                            FontWeight="Medium"
                            Width="200"
                            Height="50"
                            Margin="0,0,20,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="25"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Delete Recipe"
                            Click="DeleteButton_Click"
                            Foreground="Black"
                            FontSize="16"
                            FontWeight="Medium"
                            Width="200"
                            Height="50">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                                <Setter Property="Background" Value="#D32F2F"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#B71C1C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="25"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                    HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
