<Window x:Class="Smakopedia.CreateRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Smakopedia"
        mc:Ignorable="d"
       Title="Create Recipe"
        Height="400" Width="400" Background="#5D4037">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Recipe Name:"
                   Foreground="White"
                   FontSize="14"
                   FontFamily="Fonts/#Dosis"/>

        <TextBox Grid.Row="1"
                 Name="RecipeNameTextBox"
                 Height="30"
                 FontSize="14"
                 FontFamily="Fonts/#Dosis"
                 Margin="0,5,0,10"/>

        <TextBlock Grid.Row="2"
                   Text="Description:"
                   Foreground="White"
                   FontSize="14"
                   FontFamily="Fonts/#Dosis"
                   Margin="0,10,0,0"/>

        <TextBox Grid.Row="3"
                 Name="RecipeDescriptionTextBox"
                 Height="60"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 FontSize="14"
                 FontFamily="Fonts/#Dosis"
                 Margin="0,5,0,10"/>

        <Button Grid.Row="4"
                Content="Upload Image"
                Background="#FF9800"
                Foreground="Black"
                FontSize="14"
                FontFamily="Fonts/#Dosis"
                Cursor="Hand"
                Height="30"
                Margin="0,10,0,10"/>

        <Image Grid.Row="5"
               Name="RecipeImage"
               Width="100"
               Height="100"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               Margin="0,10,0,10"/>

        <Button Grid.Row="6"
                Content="Create"
                Background="#FF9800"
                Foreground="Black"
                FontSize="16"
                FontWeight="Bold"
                FontFamily="Fonts/#Dosis"
                Cursor="Hand"
                Width="120"
                Height="40"
                HorizontalAlignment="Center"
                Margin="0,10,0,0"/>
    </Grid>
</Window>